<% provide( :title, "Home" ) %>
<% if !logged_in? %>
  <div class="center jumbotron">
    <h1>Account Book</h1>
    <h2>個人事業主のための簡易帳簿システム</h2>

    <div>
      <%= link_to "Sign up", signup_path, class:"btn lg-panel col-md-6" %>
      <%= render 'sign_in_form' %>
    </div>
  </div>
<% else %>
<main class="col-sm-10 col-sm-offset-1">
  <h1 class="h4">
  <%= "こんにちは、 #{session[:user_name]}さん"%>
  </h1>
  <div class="col-sm-4">
    <%= render 'record_form' %>
  </div>
  <div class="col-sm-8">
    <%= render @records %>
  </div>
<% end %>

