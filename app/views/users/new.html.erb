<% provide(:title, 'アカウント作成') %>
<h1>アカウント作成</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url:signup_path) do |f| %>
      <%= render 'shared/error_messages', data: @user %>
      <ul>
      <%= f.label :ユーザー名 %><br>
      <%= f.text_field :name %>
      </ul>
      <ul>
      <%= f.label :email %><br>
      <%= f.email_field :email %>
      </ul>
      <ul>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
      </ul>
      <ul>
      <%= f.label :password_confirmation, "再入力" %><br>
      <%= f.password_field :password_confirmation %>
      </ul>
      <%= f.submit "ユーザー登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>