<% provide( :title, "事業一覧" ) %>
<main class="col-sm-10 col-sm-offset-1">
  <h1 class="h2">あなたの事業一覧</h1>
  <div class="col-sm-4">
    <%= render 'division_form' %>
  </div>
  <div class="col-sm-8">
    <%= render @divisions %>
    <div class="panel panel-default group">
      <div class="panel-heading">
        マルチ集計
      </div>
      <div class="panel-body">
      <%= form_with scope: :post, url: division_marge_path do |f| %>
        <%= f.collection_check_boxes :division_ids, @divisions, :id, :name do |b| %>
          <%= b.label {b.check_box + b.text } %>
        <% end %>
        <%= f.submit "集計を見る", class: "btn btn-default pull-right" %>
      <% end %>
      </div>
    </div>
  </div>
</main>