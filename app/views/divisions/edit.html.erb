<% provide( :title, "#{@division.name}の編集" ) %>
<main class="col-sm-10 col-sm-offset-1">
<h1><%= @division.name %>の編集</h1>
<div class="col-sm-4">
  <%= form_with model: @division, method: :patch do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.submit "変更反映", class: "btn btn-primary" %>
  <% end %>
  <br>
</div>
<div class="col-sm-8 text-center danger-zone">
  !!!Danger Zone!!!
  <%= form_with model: @division, method: :delete do |f| %>
    <%= f.submit "削除する", class: "btn btn-danger" %>
  <% end %>
</div>
</main>